---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import AdPlaceholder from '../../components/AdPlaceholder.astro';
import Badge from '../../components/Badge.astro';
import { getCollection } from 'astro:content';
import { getCategoryShortName } from '../../data/categories';

// Static paths for all news with pagination
export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const postsPerPage = 12;

  const sortedPosts = allPosts
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  const totalPages = Math.ceil(sortedPosts.length / postsPerPage) || 1;
  const paths: any[] = [];

  // First page: /noticias
  paths.push({
    params: { page: undefined },
    props: {
      posts: sortedPosts.slice(0, postsPerPage),
      currentPage: 1,
      totalPages,
      totalPosts: sortedPosts.length
    }
  });

  // Additional pages: /noticias/2, /noticias/3, etc.
  for (let page = 2; page <= totalPages; page++) {
    const start = (page - 1) * postsPerPage;
    paths.push({
      params: { page: String(page) },
      props: {
        posts: sortedPosts.slice(start, start + postsPerPage),
        currentPage: page,
        totalPages,
        totalPosts: sortedPosts.length
      }
    });
  }

  return paths;
}

const { posts, currentPage, totalPages, totalPosts } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString('es-ES', { day: 'numeric', month: 'short', year: 'numeric' });
}

function getAvatarUrl(author: string, authorAvatar?: string): string {
  if (authorAvatar) return authorAvatar;
  return `https://api.dicebear.com/7.x/avataaars/svg?seed=${encodeURIComponent(author)}`;
}

// Generate page numbers for pagination
function getPageNumbers(current: number, total: number): (number | string)[] {
  if (total <= 7) return Array.from({ length: total }, (_, i) => i + 1);

  const pages: (number | string)[] = [];
  if (current <= 4) {
    pages.push(1, 2, 3, 4, 5, '...', total);
  } else if (current >= total - 3) {
    pages.push(1, '...', total - 4, total - 3, total - 2, total - 1, total);
  } else {
    pages.push(1, '...', current - 1, current, current + 1, '...', total);
  }
  return pages;
}

const pageNumbers = getPageNumbers(currentPage, totalPages);
---

<Layout title="Todas las Noticias" description="Todas las noticias de tecnologia, inteligencia artificial, ciberseguridad y criptomonedas">
  <Header />

  <!-- PAGE HEADER -->
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">Todas las Noticias</h1>
      {totalPages > 1 && (
        <span class="page-header__page">Página {currentPage} de {totalPages}</span>
      )}
    </div>
  </section>

  <!-- AD: After Header -->
  <div class="container">
    <AdPlaceholder slot="noticias-after-header" size="leaderboard" />
  </div>

  <!-- POSTS GRID -->
  <section class="all-posts">
    <div class="container">
      {posts.length > 0 ? (
        <div class="all-posts__grid">
          {posts.map((post: any, index: number) => (
            <article class:list={["post-card", { "post-card--featured": index === 0 && currentPage === 1 }]}>
              <a href={`/posts/${post.slug}`} class="post-card__link">
                <div class="post-card__image-wrap">
                  <img src={post.data.image} alt={post.data.title} class="post-card__image" loading={index < 3 ? "eager" : "lazy"} />
                  {post.data.readTime && <span class="post-card__read-time">{post.data.readTime}</span>}
                </div>
                <div class="post-card__content">
                  <Badge category={post.data.category} />
                  <h3 class="post-card__title">{post.data.title}</h3>
                  <p class="post-card__excerpt">{post.data.excerpt}</p>
                  <div class="post-card__meta">
                    <img src={getAvatarUrl(post.data.author, post.data.authorAvatar)} alt={post.data.author} class="post-card__avatar" width="24" height="24" />
                    <span>{post.data.author}</span>
                    <span>·</span>
                    <span>{formatDate(post.data.date)}</span>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="all-posts__empty">
          <p>No hay noticias disponibles.</p>
        </div>
      )}

      <!-- PAGINATION -->
      {totalPages > 1 && (
        <nav class="pagination" aria-label="Paginacion">
          {currentPage > 1 && (
            <a href={currentPage === 2 ? '/noticias' : `/noticias/${currentPage - 1}`} class="pagination__btn pagination__btn--prev">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
              <span>Anterior</span>
            </a>
          )}

          <div class="pagination__numbers">
            {pageNumbers.map((num) => (
              num === '...' ? (
                <span class="pagination__ellipsis">...</span>
              ) : (
                <a
                  href={num === 1 ? '/noticias' : `/noticias/${num}`}
                  class:list={["pagination__number", { active: num === currentPage }]}
                  aria-current={num === currentPage ? "page" : undefined}
                >
                  {num}
                </a>
              )
            ))}
          </div>

          {currentPage < totalPages && (
            <a href={`/noticias/${currentPage + 1}`} class="pagination__btn pagination__btn--next">
              <span>Siguiente</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
            </a>
          )}
        </nav>
      )}
    </div>
  </section>

  <!-- BACK TO HOME -->
  <section class="back-section">
    <div class="container">
      <a href="/" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
        Volver al inicio
      </a>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="footer">
    <div class="container">
      <div class="footer__bottom">
        <p>&copy; 2026 LaHora24. Todos los derechos reservados.</p>
      </div>
    </div>
  </footer>
</Layout>

<style>
  /* Page Header - Simple */
  .page-header {
    padding: 2rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .page-header .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .page-header__title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  .page-header__page {
    font-size: 0.875rem;
    color: var(--text-muted);
    background: var(--bg-secondary);
    padding: 0.5rem 1rem;
    border-radius: 20px;
  }

  /* Filter Section - removed, keeping for backwards compat */
  .filter-section {
    display: none;
  }

  .filter-tabs {
    display: none;
  }

  .filter-tab {
    display: none;
    border: 1px solid var(--border-color);
    border-radius: 9999px;
    color: var(--text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .filter-tab:hover {
    background: var(--bg-primary);
    color: var(--text-primary);
    border-color: var(--accent-primary);
  }

  .filter-tab.active {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    color: white;
  }

  /* Posts Grid */
  .all-posts {
    padding: 3rem 0 4rem;
  }

  .all-posts__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .all-posts__empty {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.75rem;
    padding: 3rem 0;
    margin-top: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .pagination__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: var(--accent-primary);
    border: none;
    border-radius: 50px;
    color: #fff;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .pagination__btn:hover {
    background: var(--accent-secondary, #0d9668);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  .pagination__numbers {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--bg-secondary);
    padding: 0.5rem;
    border-radius: 50px;
    border: 1px solid var(--border-color);
  }

  .pagination__number {
    width: 42px;
    height: 42px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    border-radius: 50%;
    color: var(--text-secondary);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .pagination__number:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .pagination__number.active {
    background: var(--accent-primary);
    color: white;
    box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
  }

  .pagination__ellipsis {
    width: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    font-weight: 600;
  }

  /* Back Section */
  .back-section {
    padding: 2rem 0;
    border-top: 1px solid var(--border-color);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent-primary);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .page-hero {
      padding: 3rem 0 2rem;
    }

    .page-hero__stats {
      flex-direction: column;
      gap: 0.5rem;
    }

    .all-posts__grid {
      grid-template-columns: 1fr;
    }

    .all-posts__grid .post-card--featured {
      grid-column: 1;
    }

    .pagination__btn span {
      display: none;
    }

    .pagination__btn {
      padding: 0.75rem;
    }
  }
</style>
